// Check if Array Is Sorted and Rotated

class Solution {
    public boolean check(int[] nums) {
        int count=0;
        for(int i=0;i<nums.length;i++){
            // i+1 % nums.length isliye likha hai kuki ye last element ko first se compare kara dega isse wrap up ho jaaati hai array 
            if(nums[i]>nums[(i+1)%nums.length]){
                // count++ indicates there is break in the array
                count++;
            }
           if(count>1){
            return false;
           }
        }
        return true;
    }
}