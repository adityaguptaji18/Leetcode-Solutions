//Third Maximum Number

class Solution {
    public int thirdMax(int[] nums) {
        // long mein isliye liya kuki kucch cases mein value int se bhi chotti hogi
        long max=Long.MIN_VALUE;
        long smax=Long.MIN_VALUE;
        long tmax=Long.MIN_VALUE;
        for(int i:nums){
            // agar koi bhi duplicate element aayega toh ye use skip kar dega
            if(i==max || i==smax||i==tmax){
                continue;
            }
            // i >max hua toh value ko interchange kara dega
            if(i>max){
                tmax=smax;
                smax=max;
                max=i;
            }
            else if(i>smax){
                tmax=smax;
                smax=i;

            }
            // in case of any confusion , dry run for this condition (2,2,3,1)
            else if(i>tmax){
                tmax=i;
            }
        }
        return (tmax==Long.MIN_VALUE)?(int)max:(int)tmax;
    }
}